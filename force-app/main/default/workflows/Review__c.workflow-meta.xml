<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <alerts>
        <fullName>Completion_of_the_Interview_process</fullName>
        <description>Completion of the Interview process</description>
        <protected>false</protected>
        <recipients>
            <recipient>akshaysu@cunning-shark-efdyl2.com</recipient>
            <type>user</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>Position_Request_Responses/Interview_Round_Completed</template>
    </alerts>
    <rules>
        <fullName>NewReview</fullName>
        <actions>
            <name>Completion_of_the_Interview_process</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <booleanFilter>1</booleanFilter>
        <criteriaItems>
            <field>Review__c.Name</field>
            <operation>notEqual</operation>
            <value>NULL</value>
        </criteriaItems>
        <description>Trigger an Email Alert to the HR whenever a new Review is created which shows that the 
Interview process is completed and can move to the next step</description>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
</Workflow>
