<apex:page controller="CandidateSearch">
    <apex:form >
        <apex:pageBlock >
            <apex:pageBlockButtons >
                <apex:commandButton value="Search By Name" action="{!searchCandidatesByName}"/>
                <apex:commandButton value="Search By Experience" action="{!searchCandidatesByExperience}"/>
                <apex:commandButton value="Search By Skills" action="{!searchCandidatesBySkills}"/>
                <apex:commandButton value="Sort" action="{!sortCandidatesByName}"/>    
          <!--      <apex:commandButton value="First Page" reRender="contact-table" action="{!FirstPage}"/>
                <apex:commandButton value="Previous" reRender="contact-table" action="{!previous}"/>
                <apex:commandButton value="Next" reRender="contact-table" action="{!next}" />
                <apex:commandButton value="Last Page" reRender="contact-table" action="{!LastPage}" />  -->       
            </apex:pageBlockButtons>
            <apex:pageBlockSection >
                <apex:pageBlockSectionItem >
                         <apex:outputLabel >Enter the Fields</apex:outputLabel>
                        <apex:inputText value="{!field}"/>
                </apex:pageBlockSectionItem>
            </apex:pageBlockSection>
            <apex:pageBlockSection id="contact-table" columns="1">
                <apex:pageBlockTable value="{!candidates}" var="c">
                    <apex:column >
                        <apex:facet name="header">Id</apex:facet>
                        {!c.Name}
                    </apex:column>
                    <apex:column >
                        <apex:facet name="header">First Name</apex:facet>
                        {!c.First_Name__c}
                    </apex:column>
                    <apex:column >
                        <apex:facet name="header">Last Name</apex:facet>
                        {!c.Last_Name__c}
                    </apex:column>
                    <apex:column >
                        <apex:facet name="header">City</apex:facet>
                        {!c.City__c}
                    </apex:column>
                    
                </apex:pageBlockTable>
            </apex:pageBlockSection>
            </apex:pageBlock>
    </apex:form>
</apex:page>